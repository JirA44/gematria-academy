rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Règles pour les profils utilisateurs
    match /users/{userId} {
      // Lecture : tout le monde peut voir les profils publics
      allow read: if true;

      // Écriture : seulement le propriétaire du profil
      allow write: if request.auth != null && request.auth.uid == userId;

      // Progression de l'utilisateur (sous-collection)
      match /progression/{progressId} {
        // Lecture : seulement le propriétaire
        allow read: if request.auth != null && request.auth.uid == userId;

        // Écriture : seulement le propriétaire
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Bloquer tout le reste par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
